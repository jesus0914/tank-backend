datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  USER
  ADMIN
}

enum AlertType {
  LOW_LEVEL
  OVERFLOW
}

enum PlanInterval {
  MONTHLY
  QUARTERLY
  YEARLY
}

model User {
  id             Int            @id @default(autoincrement())
  identification String?        @unique
  email          String         @unique
  password       String
  name           String
  lastName       String?
  phone          String?
  address        String?
  avatarUrl      String?
  role           UserRole       @default(USER)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  subscriptions  Subscription[]
}

model Tank {
  id          Int           @id @default(autoincrement())
  name        String
  level       Float
  liters      Float
  fills       Int           @default(0)
  online      Boolean       @default(false)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  tankHistory TankHistory[]
  alerts      Alert[]
  reports     Report[]
}

model TankHistory {
  id        Int      @id @default(autoincrement())
  tankId    Int
  level     Int
  liters    Int
  fills     Int
  createdAt DateTime @default(now())

  tank Tank @relation(fields: [tankId], references: [id])
}

model Alert {
  id        Int       @id @default(autoincrement())
  tankId    Int
  type      AlertType
  message   String
  active    Boolean   @default(true)
  createdAt DateTime  @default(now())

  tank Tank @relation(fields: [tankId], references: [id])
}

model Report {
  id        Int      @id @default(autoincrement())
  tankId    Int
  data      Json
  createdAt DateTime @default(now())

  tank Tank @relation(fields: [tankId], references: [id])
}

model Plan {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  price        Float
  description  String
  maxTanks     Int
  support      Boolean  @default(false)
  interval     PlanInterval
  createdAt    DateTime @default(now())

  subscriptions Subscription[]
}

model Subscription {
  id        Int      @id @default(autoincrement())
  userId    Int
  planId    Int
  active    Boolean  @default(true)
  startedAt DateTime @default(now())
  endedAt   DateTime?

  user User @relation(fields: [userId], references: [id])
  plan Plan @relation(fields: [planId], references: [id])
}
